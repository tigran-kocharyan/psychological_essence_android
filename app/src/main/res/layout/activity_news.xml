<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deprecated.News"
    android:background="@drawable/background"
    android:noHistory="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="34dp"
        android:paddingRight="15dp"
        android:paddingBottom="34dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="55dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:onClick="openMenu"
                    app:srcCompat="@drawable/menu" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/news_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/news_search_btn"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />

                    <ImageButton
                        android:id="@+id/button3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="17dp"
                        android:backgroundTint="#00000000"
                        android:src="@drawable/search" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        app:srcCompat="@drawable/edit" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/filter" />
                </LinearLayout>

                <TextView
                    android:id="@+id/nameTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/playfair_display_sc"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:text="@string/news_new"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/news_item"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="@string/news_new_title" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:gravity="center"
                        android:text="@string/news_new_text" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="125dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:background="@drawable/news_btn"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="@string/news_new_btn"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/news_item"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/test_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="@string/news_new_title" />

                    <TextView
                        android:id="@+id/test_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:gravity="center"
                        android:text="@string/news_new_text" />

                    <Button
                        android:id="@+id/test_go"
                        android:layout_width="125dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:background="@drawable/news_btn"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="@string/news_new_btn"
                        android:textAllCaps="false" />
                </LinearLayout>


                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/playfair_display_sc"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:text="@string/news_like"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/news_item"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="@string/news_like_title" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:gravity="center"
                        android:text="@string/news_like_text" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="125dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:background="@drawable/news_btn"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="@string/news_new_btn"
                        android:textAllCaps="false" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/playfair_display_sc"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:text="@string/news_notFinish"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/news_item"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="@string/news_notFinish_title" />

                    <TextView
                        android:id="@+id/textView32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:gravity="center"
                        android:text="@string/news_notFinish_text" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="209dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:minHeight="16dip"
                        android:progress="70"
                        android:progressBackgroundTint="@color/regisBtn" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/news_notFinish_prompt" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="125dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:background="@drawable/news_btn"
                        android:fontFamily="@font/montserrat_alternates"
                        android:text="@string/news_notFinish_btn1"
                        android:textAllCaps="false" />
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>