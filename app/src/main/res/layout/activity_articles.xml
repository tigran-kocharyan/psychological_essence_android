<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Articles"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="34dp"
        android:paddingRight="15dp"
        android:paddingBottom="34dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="55dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:onClick="openMenu"
                    app:srcCompat="@drawable/menu" />


                <TextView
                    android:id="@+id/nameTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/playfair_display_sc"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:text="@string/articles_title"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/news_item"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="288dp"
                        android:layout_height="107dp"
                        android:layout_weight="1"
                        app:srcCompat="?attr/panelBackground" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:gravity="center"
                        android:text="@string/articles_text" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="125dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:background="@drawable/news_btn"
                        android:fontFamily="@font/montserrat_alternates"
                        android:onClick="openArticle"
                        android:text="@string/articles_btn"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/news_item"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="288dp"
                        android:layout_height="107dp"
                        android:layout_weight="1"
                        app:srcCompat="?attr/panelBackground" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:gravity="center"
                        android:text="@string/articles_text" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="125dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:background="@drawable/news_btn"
                        android:fontFamily="@font/montserrat_alternates"
                        android:onClick="openArticle"
                        android:text="@string/articles_btn"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="215dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/news_item"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="288dp"
                        android:layout_height="107dp"
                        android:layout_weight="1"
                        app:srcCompat="?attr/panelBackground" />

                    <TextView
                        android:id="@+id/test_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_alternates"
                        android:gravity="center"
                        android:text="@string/articles_text" />

                    <Button
                        android:id="@+id/test_go"
                        android:layout_width="125dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:background="@drawable/news_btn"
                        android:fontFamily="@font/montserrat_alternates"
                        android:onClick="openArticle"
                        android:text="@string/articles_btn"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>