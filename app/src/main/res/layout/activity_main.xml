<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    android:noHistory="true">

    <LinearLayout
        android:id="@+id/login_register"
        android:layout_width="394dp"
        android:layout_height="341dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/regis_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/btnSignIn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/regis_btn_bg"
            android:backgroundTint="@android:color/white"
            android:fontFamily="@font/montserrat_alternates"
            android:inputType="textCapSentences"
            android:text="@string/login_go"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/montserrat_alternates"
            android:text="@string/login" />

        <EditText
            android:id="@+id/input_login"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/regis_inp_bg"
            android:ems="10"
            android:fontFamily="@font/montserrat_alternates"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"/>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/montserrat_alternates"
            android:text="@string/login_password" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                app:passwordToggleEnabled="true"
                tools:ignore="MissingConstrains">

                <EditText
                    android:id="@+id/input_pass"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@drawable/regis_inp_bg"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_alternates"
                    android:inputType="textPassword"
                    android:paddingLeft="20dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>



<!--            <ImageButton-->
<!--                android:id="@+id/button3"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignTop="@+id/input_pass"-->
<!--                android:layout_alignRight="@+id/input_pass"-->
<!--                android:layout_alignBottom="@+id/input_pass"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_marginStart="5dp"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:layout_marginEnd="5dp"-->
<!--                android:layout_marginBottom="5dp"-->
<!--                android:onClick="showPassword"-->
<!--                android:src="@drawable/pass_btn_off" />-->
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="@string/login_noAcc" />

        <Button
            android:id="@+id/go_to_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/regis_btn_bg"
            android:backgroundTint="@android:color/white"
            android:fontFamily="@font/montserrat_alternates"
            android:inputType="textCapSentences"
            android:onClick="goToRegister"
            android:text="@string/login_regis"
            android:textColor="@android:color/black"
            app:rippleColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
