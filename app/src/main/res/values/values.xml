<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string" />

    <style name="App.ThemeOverlay.Toolbar.Title" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="AppTheme.Text.Title" parent="AppTheme.Text">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/blackLight</item>
    </style>

    <style name="AppTheme.Text.Content.Title" parent="AppTheme.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/blackLight</item>
    </style>

    <style name="AppTheme.Text.Subtitle" parent="AppTheme.Text.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/blackLight</item>
    </style>

    <style name="AppTheme.Text.Subtitle.Recommendation" parent="AppTheme.Text.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/blackLight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">3.6sp</item>
    </style>

    <style name="AppTheme.Text.BarTitle" parent="AppTheme.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Text.InputTitle" parent="AppTheme.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/blackLight</item>
    </style>

    <style name="AppTheme.Text.Error" parent="AppTheme.Text">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="AppTheme.Text.ErrorLink" parent="AppTheme.Text.Error">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="AppTheme.Text.Link" parent="AppTheme.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/blackLight</item>
    </style>


    <style name="OutlinedButtonWhite" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="MaterialButtonWhite" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="MaterialButtonPurple" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="App.ThemeOverlay.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/purple</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="AppTheme" />
</resources>