<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string" />

    <style name="App.ThemeOverlay.Toolbar.Title" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="OutlinedButtonWhite" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="MaterialButtonWhite" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="strokeColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="MaterialButtonPurple" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:strokeColor">@color/purple</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="AppTheme.Text.Transcription" parent="AppTheme.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/futura_medium</item>
        <item name="android:textColor">@color/grayLight</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppTheme.Text.Title1" parent="AppTheme.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Text.Title2" parent="AppTheme.Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Text.Title3" parent="AppTheme.Text.Title2">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="App.ThemeOverlay.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/purple</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="AppTheme" />
</resources>